pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'ap-southeast-1'  
        S3_BUCKET_NAME = 'demo12381' 
    }

    stages {
        stage('Git checkout') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/shreya15jirapure/frontend.git'
            }
        }


        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Build') {
            steps {
                sh 'ng build'
            }
        }


        stage('Deploy to s3') {
            steps {
                sh "aws s3 sync dist/hadiya_products_admin/ s3://${S3_BUCKET_NAME} --delete --exact-timestamps"
            }
        }
        


        
    }
}